<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="anson.std.medical.dealer.activity.MainActivity">

    <TextView
        android:id="@+id/log_view"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginBottom="-62dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/to_select_patient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:onClick="toSelectContact"
        android:text="@string/select_contact"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/patient_view"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:text="@string/info_view_text"
        app:layout_constraintBaseline_toBaselineOf="@+id/to_select_patient"
        app:layout_constraintLeft_toRightOf="@+id/to_select_patient" />

    <Button
        android:id="@+id/to_select_doctor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:onClick="toSelectDoctor"
        android:text="@string/select_hospital"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to_select_patient" />

    <TextView
        android:id="@+id/doctor_view"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:text="@string/info_view_text"
        app:layout_constraintBaseline_toBaselineOf="@+id/to_select_doctor"
        app:layout_constraintLeft_toRightOf="@+id/to_select_doctor" />

</android.support.constraint.ConstraintLayout>
