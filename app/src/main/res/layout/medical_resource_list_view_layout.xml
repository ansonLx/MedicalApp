<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/doctor_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/doctor_title_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/doctor_skill_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="8sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/doctor_title_view"
        app:layout_constraintRight_toLeftOf="@+id/edit_btn"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/edit_btn"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="@string/edit_btn"
        android:focusable="false"
        android:textSize="12sp"
        app:layout_constraintRight_toLeftOf="@+id/del_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/del_btn"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="@string/del_btn"
        android:focusable="false"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/doctor_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/doctor_timer_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-1dp"
        android:text="TextView"
        android:textSize="8sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doctor_skill_view"
        app:layout_constraintRight_toLeftOf="@+id/edit_btn"
        android:layout_marginRight="8dp" />
</android.support.constraint.ConstraintLayout>
